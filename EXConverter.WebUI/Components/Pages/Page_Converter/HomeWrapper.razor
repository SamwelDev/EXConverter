@page "/hmt"
@using EXConverter.WebUI.Components.Pages.Page_Converter.Page_Ops
@rendermode InteractiveServer
@inject ILogger<HomeWrapper> _logger
@inject NavigationManager _Nav

<PageTitle>QUICKDOCS|A free solutions</PageTitle>

<div class="container min-vh-60 d-flex align-items-center">
    <div class="row align-items-center w-60">

        <div class="col-lg-6">
            <h1 class="fw-bold display-5  text-success opacity-50">Inafanya kubadili nyaraka iwe rahisi.</h1>
            <p class="mt-3 mb-4 text-muted">
                Zana zote utakazohitaji kuwa na tija zaidi na kufanya kazi kwa ufanisi zaidi na nyaraka.
            </p>

           
        </div>
        <div class="dropdown @(showTools ? "show" : "")">
            <button class="btn btn-outline-primary px-4 py-2 dropdown-toggle"
                    type="button"
                    id="dropdownTools"
                    aria-expanded="@showTools"
                    @onclick="ToggleTools">
                Angalia zana zote
            </button>

            <ul class="dropdown-menu shadow @(showTools ? "show" : "")" aria-labelledby="dropdownTools">
                <li>
                    <button class="dropdown-item text-start"
                            @onclick="@(() => NavigateTo("/converter"))">
                        <i class="bi bi-file-earmark-excel me-2"></i>
                        Convert Excel to PDF <small class="text-muted">(Badili)</small>
                    </button>
                </li>

                <li>
                    <button class="dropdown-item text-start"
                            @onclick="@(() => NavigateTo("/merger"))">
                        <i class="bi bi-layout-wtf me-2"></i>
                        Merge <small class="text-muted">(Unganisha)</small>
                    </button>
                </li>

                <li>
                    <button class="dropdown-item text-start"
                            @onclick="@(() => NavigateTo("/spliter"))">
                        <i class="bi bi-scissors me-2"></i>
                        Split <small class="text-muted">(Gawanya)</small>
                    </button>
                </li>
            </ul>
        </div>
</div>
        <div class="col-lg-6 text-center mt-3 mt-lg-0">
            <div class="position-relative d-inline-block">
           @*  <img src="https://via.placeholder.com/450x300.png?text=Doc+Conversion"
                 class="img-fluid rounded shadow"
                 alt="Document Conversion Tools">
 *@

                <img src="https://img.icons8.com/color/48/000000/ms-excel.png"
                     class="position-absolute top-0 start-0 translate-middle" alt="Word Icon">
                <img src="https://img.icons8.com/color/48/000000/pdf.png"
                     class="position-absolute bottom-0 end-0 translate-middle" alt="PDF Icon">
                <img src="https://img.icons8.com/color/48/000000/image.png"
                     class="position-absolute top-0 end-0 translate-middle" alt="Image Icon">
            </div>
        </div>

    </div>

@code {
    private bool showTools = false;
    private string _activeTab = "_Home";
    private bool _IsLoading = false;

    private void ToggleTools()
    {
        showTools = !showTools;
    }
    private void NavigateTo(string url)
    {
        _Nav.NavigateTo(url);
        showTools = false; 
    }
    private void SelectTab(string tabName)
    {
        _activeTab = tabName;
        showTools = false; // close dropdown after selection
        _logger.LogInformation("Try to access too;s of conversion");
    }
}
